<h1 class='people-title'>People</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Avatar</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td data-label="first_name"><%= person.first_name %></td>
        <td data-label="last_name"><%= person.last_name %></td>
        <td data-label="avatar">
          <img class="ui small image" src=<%= person.avatar %> />
        </td>
        <td data-label="email"><%= person.email %></td>
        <td data-label="phone"><%= person.phone %></td>
        <td>
          <%= link_to 'Show', person_path(person) %>
          <%= link_to 'Edit', edit_person_path(person) %>
          <%= link_to 'Delete', person, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "new Person", new_person_path, class: 'people-link' %>